<% @posts.each do | post | %>
  <div  class="post-container">
    <div class="post-info">
      <p><%= post.user.username %> has </p>
      <h5><%= post.title %></h5>
    </div>
    <%# <p><%= post.date %>
    <%= link_to "View update", "/", :class => "purple-link"%>
  </div>
    <div class="tag-container">
      <% post.tags.each do |tag| %>
        <div class="tag"><%= tag.name %></div>
    <% end %>
    </div>
<% end %>
